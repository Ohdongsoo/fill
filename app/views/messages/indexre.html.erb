<div class="container">
<p id="notice"><%= notice %></p>

<h1 style="text-align:center;">수신함</h1>
<br>
<table class="table" style="background-color:#ffffff; border:1px solid #e8e5e5; text-align:center;">
      <thead>
      <tr>
        <th style="width:30%; background-color:#EAEAEA"><center>송신</center></th>
        <th style="width:30%; background-color:#EAEAEA"><center>수신</center></th>
        <th style="width:20%; background-color:#EAEAEA"><center>작성일</center></th>
        <th style="width:10%; background-color:#EAEAEA"><center>보기</center></th>
        <th style="width:10%; background-color:#EAEAEA"><center>제거</center></th>
      </tr>
      </thead>
      <tbody>
    <% @messages.reverse.each do |message| %>
      <% if current_user.id == message.receiver %>
        <tr>
          <td><center><%= message.user.name %></center></td>
          <td><center><%= current_user.name %></center></td>
          <td><center><%= message.created_at %></center></td>
          <td><center><%= link_to '보기', message %></center></td>
          <td><center><%= link_to '제거', message, method: :delete, data: { confirm: '메세지함에서 제거하시겠습니까?' } %></center></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<a href="/mypage/<%= current_user.id %>" style="font-size:16px; float:right">My page</a>

<br>

</div>