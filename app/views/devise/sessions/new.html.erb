<html style="width:100%; height:100%">
<head>

  <style>
    body {
     background-color: #c9c9c9;
    -webkit-background-size: 200%; 
    -moz-background-size: 200%; 
    -o-background-size: 200%; 
    }
    label{
      font-size:15px;
    }
    body{
      font-family:arial;
    }    
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />

</head>
<body>
   <div class="container" style="background-color: white; padding-top: 11%;  padding-bottom: 13%">
      <div class="col-md-6 col-md-offset-3">

  <h1 style="text-align:center; margin-bottom: 0px; color:#3e7fe8">FILL</h1>
    <hr>
    <h2><center>로그인</center></h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="field">
      <%= f.label "이메일 주소" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <br>
    <div class="field">
      <%= f.label "비밀번호" %><br />
      <%= f.password_field :password, autocomplete: "off",  class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    
    <div class="actions">
     <center><%= f.submit "로그인",  class: "btn", style: "background-color: #3e7fe8; color:white;" %>
      <a href="/users/sign_up"><button class="btn" style="background-color: #3e7fe8; color:white">회원가입</button></a><br><br></center> 
    </div>
    <div class="actions">
      <center><a href="/users/password/new"><button class="btn" style="background-color: #3e7fe8; color:white">비밀번호를 잊으셨나요?</button></a></center> 
    </div>
  <% end %>
  </div>
</body>
</html>